<h1> Edit Customers list</h1>

<%= form_for @customer do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :sex %>
    <%= f.text_field :sex %>
  </p>

  <p>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :sex %>
    <%= f.select :sex , [["Man", 'male'], ["WOman", 'female']]  %>
  </p>

  <%= f.submit %>

<% end %>