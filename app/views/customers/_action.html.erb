<%= link_to customer_path(customer) do %>
  <i class="fa fa-eye" title="Show"></i>
<% end %>
<%= link_to edit_customer_path(customer) do %>
  <i class="fa fa-edit" title="Edit"></i>
<% end %>
<%= link_to customer_path(customer), method: :delete, data: { confirm: "Are you sure? "} do %>
  <i class="fa fa-trash" title="Destroy">
<% end %>
