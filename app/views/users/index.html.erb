
<h2>User List</h2>

<%= link_to 'New users', new_user_path  %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Age</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user,index| %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= user.name %></td>
        <td><%= user.sex %></td>
        <td><%= user.age %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to "Edit", edit_user_path(user)%></td>
        <td><%= link_to "Destroy", user_path(user),
                method: :delete,
                data: { confirm: "Are you sure? "} %></td>
      </tr>
    <% end %>
  </tbody>
</table>