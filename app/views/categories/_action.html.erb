<div class="btn-group">
  <button type="button" class="btn btn-info btn-sm">Action</button>
  <button type="button" class="btn btn-info btn-sm dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item padding-left" href="#"><%= link_to 'Show', category_path(category) ,class: "padding-left"%></a>
    <a class="dropdown-item padding-left" href="#"><%= link_to "Edit", edit_category_path(category), class: "padding-left"%></a>
    <a class="dropdown-item padding-left" href="#"><%= link_to "Destroy", category_path(category),
                  method: :delete,
                  data: { confirm: "Are you sure? "} ,class: "padding-left"%></a>
</div>
