<h1>Book <%= @book.title %> (View counts: <%= @book.view_count %>)</h1>

<p>
  <%= @book.author %>
</p>

<p>
	<%= @book.description %>
</p>

<% if @book.publisher.present? %>
  <p>Publisher name: <%= @book.publisher.name %></p>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Destroy', book_path(@book), method: :delete %>

<h3>Comments</h3>
<% @book.comments.each do |comment| %>
  <p>
  	<%= comment.content %>
  	<% if comment.persisted? %>
	  	<%= link_to 'Destroy', comment_path(comment), method: :delete %>
	 <% end %>
  </p>

<% end %>

<p>Comment here</p>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :book_id %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>