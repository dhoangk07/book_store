<div class="col-6 offset-2">
  <%= simple_form_for @edit do |f| %>
    <%= f.input :name, label: false, placeholder: "Please input name" %>
    <%= f.input :phone, label: false, placeholder: "Please input phone" %>
    <%= f.input :birth_year, label: false, placeholder: "Please input birth year" %>
    <%= f.submit "Create", class: "btn btn-primary btn-block" %>
  <% end %>
</div>